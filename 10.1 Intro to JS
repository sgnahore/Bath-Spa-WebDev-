/* JS CODE:*/

      function changeHTML(){
        document.getElementById("p-change").innerHTML = "I have changed it";
    }

        function turnOn() {
            document.getElementById("lightBulb").src = "light on.webp";
            console.log("turn on button hit.");
        }
        function turnOff() {
            document.getElementById("lightBulb").src = "light off.webp"
            console.log("turn off button hit.");
        }

        function printScreen() {
            window.print() 
        }
        window.alert("ALERT! you are about to enter a toxic site");
        console.log("ALERT! you are about to enter a toxic site");
